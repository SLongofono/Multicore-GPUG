# PROG = testWriter2

CPP = g++ -fPIC
LINK = g++ -fPIC

INC1 = -I$(BUILD_BASE)/include/cryph -I$(BUILD_BASE)/include/OGL
INC2 = $(OGL_INC_LOC)
CFLAGS = -g -c $(INC1) $(INC2)

LIB1 = $(BUILD_BASE)/lib/OGL/libCOGLImageWriter.so $(BUILD_BASE)/lib/cryph/libPVM.so

$(PROG): $(PROG).o
	$(LINK) -g -o $(PROG) $(PROG).o $(LIB1)

$(PROG).o: $(PROG).c++
	$(CPP) $(CFLAGS) $(PROG).c++
